@model IEnumerable<Model.EF.Thuoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Header{
    <h1>Danh sách thuốc</h1>
}

<div class="row">
    <div class=" col-lg-12">
        <div class="row">
            <div class="col-3">
                <p>
                    @Html.ActionLink("Create New", "Create", "Thuoc", new { @class = "ml-2 btn btn-primary" })
                </p>
            </div>
            <div class="col-md-9 float-right">
                @using (Html.BeginForm("Index", "Thuoc", FormMethod.Get))
                {
                    <div class="input-group">
                        <input type="search" class="form-control rounded" name="searchString" value="@ViewBag.SearchString"
                               placeholder="Tìm kiếm theo tên thuốc"
                               aria-label="Search" aria-describedby="search-addon" />
                        <button type="submit" class="btn btn-outline-primary">Tìm kiếm</button>
                    </div>
                }
            </div>
        </div>
        <table class="table">
            <tr>
                <th>
                    Tên thuốc
                </th>
                <th>
                    Tên loại thuốc
                </th>
                <th>
                    Đơn vị
                </th>
                <th>
                    Giá tiền
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>

                        @Html.DisplayFor(modelItem => item.LoaiThuoc.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.digit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cost)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "pl-3 pr-4 mr-1 btn btn-primary", })
                        @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "mr-1 btn btn-success", })
                        @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-secondary", })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

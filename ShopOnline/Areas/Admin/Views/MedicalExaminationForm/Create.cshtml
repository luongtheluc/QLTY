@model Model.EF.MedicalExaminationForm

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section script{
    <script src="~/Assets/Admin/vendors/jQuery-Smart-Wizard/js/jquery.smartWizard.js"></script>

}

<style>
    p {
        color: black;
    }
</style>
<div style=" margin:auto;background-color:antiquewhite" class="container">
    <h2 style="color: black; font-size: 30px; font-weight: bold; margin-top: 50px; text-transform: uppercase" class="text-center "> Thêm mới phiếu khám bệnh</h2>
    <hr />
    <div class="row d-flex justify-content-center">

        <div class="col-6">
            <div class="card card-body mb-3">
                <div class="row">
                    <div class="col-sm-12">
                        <h5 style="color: black; font-weight: bold; font-family: Arial;">
                            I. Thông tin khám chữa bệnh - Bệnh án
                        </h5>
                    </div>
                </div>
                <hr />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row mt-1">
                        <div class="col-sm-2">
                            <p class="mb-0"><strong>Tên Pet:</strong></p>
                        </div>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.PetName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PetName, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <hr />
                    <div class="row mt-2">
                        <div class="col-sm-2">
                            <p class="mb-0"><strong>Tuổi:</strong></p>
                        </div>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control", @type = "number", @step = 1, @min = 0 } })
                            @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <hr />
                    <div class="row mt-2">
                        <div class="col-sm-2">
                            <p class="mb-0"><strong>Cân nặng:</strong></p>
                        </div>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control", @type = "number", @step = 0.1, @min = 0 } })
                            @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <hr />
                    <div class="row mt-2">
                        <div class="col-sm-2">
                            <p class="mb-0"><strong>Màu lông:</strong></p>
                        </div>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.HairColor, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.HairColor, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <hr />
                    <div class="row mt-2">
                        <div class="col-sm-2">
                            <p class="mb-0"><strong>Loài:</strong></p>
                        </div>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.Species, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Species, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <hr />
                    <div class="row mt-2">
                        <div class="col-sm-2">
                            <p class="mb-0"><strong>Giống:</strong></p>
                        </div>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.type, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <hr />
                    <div class="row mt-2">
                        <div class="col-sm-2">
                            <p class="mb-0"><strong>Giới tính:</strong></p>
                        </div>
                        <div class="col-sm-10">
                            @Html.RadioButtonFor(m => m.PetGender, true) <strong>Đực</strong>   &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            @Html.RadioButtonFor(m => m.PetGender, false) <strong>Cái</strong>
                        </div>
                    </div>
                    <hr />
                    <div class="row mt-2">
                        <div class="col-sm-12">
                            <button type="submit" class="mt-3 btn btn-primary col-md-12 wow zoomIn">Xác nhận</button>
                        </div>
                        
                    </div>
                }
            </div>
        </div>

    </div>
</div>

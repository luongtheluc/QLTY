@model IEnumerable<Model.EF.MedicalExaminationForm>

@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section Header{
    <h1>Danh sách bệnh án</h1>
}

<div class="row">
    <div class=" col-lg-12">
        <div class="row">
            <div class="col-3">
                <p>
                    @Html.ActionLink("Create New", "Create", "Service", new { @class = "ml-2 btn btn-primary" })
                </p>
            </div>
            <div class="col-md-9 float-right">
                @using (Html.BeginForm("Index", "Service", FormMethod.Get))
                {
                    <div class="input-group">
                        <input type="search" class="form-control rounded" name="searchString" value="@ViewBag.SearchString"
                               placeholder="Tìm kiếm theo tên dịch vụ"
                               aria-label="Search" aria-describedby="search-addon" />
                        <button type="submit" class="btn btn-outline-primary">Tìm kiếm</button>
                    </div>
                }
            </div>
        </div>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Appointment.Note)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Client.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Weight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HairColor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Species)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetGender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.type)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Appointment.Note)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Client.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PetName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Weight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HairColor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Species)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PetGender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.type)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "mr-1 btn btn-success", })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
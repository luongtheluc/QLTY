@model Model.EF.CacDichVuDaSuDung

@{
    ViewBag.Title = "addService";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    label{
        font-size:20px;
    }
</style>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Thêm mới một dịch vụ</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Id_DetailsService, "Tên dịch vụ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Id_DetailsService", new SelectList(Model.list, "Id", "Name"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Id_DetailsService, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <hr />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div style="margin-top:300px" >
    <hr />
    @Html.ActionLink("Back to List", "DMEF")
</div>

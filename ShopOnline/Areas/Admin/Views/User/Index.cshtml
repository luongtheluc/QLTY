@model PagedList.IPagedList<Model.EF.User>
@using PagedList.Mvc;
@using ShopOnline.Common;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section Header{
    <h1>Danh sách tài khoản</h1>
}

<div class="row">
    <div class=" col-lg-12">
        <div class="row">
            <div class="col-3">
                <p>
                    @Html.ActionLink("Create New", "Create", "User", new { @class = "ml-2 btn btn-primary" })
                </p>
            </div>
            <div class="col-md-9 float-right">
                @using (Html.BeginForm("index", "User", FormMethod.Get))
                {
                    <div class="input-group">
                        <input type="search" class="form-control rounded" name="searchString" value="@ViewBag.SearchString"
                               placeholder="Tìm bởi tên khách hàng "
                               aria-label="Search" aria-describedby="search-addon" />
                        <button type="submit" class="btn btn-outline-primary">Tìm kiếm</button>
                    </div>
                }
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>
                    UserName
                </th>
                <th>
                    Password
                </th>
                <th>
                    Name
                </th>
                <th>
                    Address
                </th>
                <th>
                    Email
                </th>
                <th>
                    Status
                </th>
                <th>
                    Phone
                </th>
                <th>
                    GroupID
                </th>
                <th>
                    Action
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupID)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "pl-3 pr-4 mr-1 btn btn-primary", }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "mr-1 btn btn-success", }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-secondary", })
                    </td>
                </tr>
            }

        </table>
    </div>
    </div>
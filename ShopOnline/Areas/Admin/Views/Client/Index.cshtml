@model PagedList.IPagedList<Model.EF.Client>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Header{
    <h1>Danh sách khách hàng</h1>
}
<div class="row">
    <div class=" col-lg-12">
        <div class="row">
            <div class="col-3">
                <p>
                    @Html.ActionLink("Create New", "Create", "Client", new { @class = "ml-2 btn btn-primary" })
                </p>
            </div>
            <div class="col-md-9 float-right">
                @using (Html.BeginForm("index", "Client", FormMethod.Get))
                {
                    <div class="input-group">
                        <input type="search" class="form-control rounded" name="searchString" value="@ViewBag.SearchString"
                               placeholder="Tìm bởi tên khách hàng hoặc số điện thoại"
                               aria-label="Search" aria-describedby="search-addon" />
                        <button type="submit" class="btn btn-outline-primary">Tìm kiếm</button>
                    </div>
                }
            </div>
        </div>

        <table class="table table-striped table-bordered table-hover">
            <tr>

                <th>
                    Name
                </th>
                <th>
                    Date of birth
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Email
                </th>
                <th>
                    Phone number
                </th>
                <th>
                    Address
                </th>
                <th>
                    Action
                </th>
            </tr>

            @foreach (var item in Model)
            {
                var a = "Male";

                if (item.gender != true)
                {
                    a = "Female";
                }

                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.Label(((DateTime)item.dob).ToString("MM / dd /yyyy"))
                    </td>
                    <td>
                        @Html.Label(a)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "pl-3 pr-4 mr-1 btn btn-primary", })*@
                        @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "mr-1 btn btn-success", })
                        @*@Html.ActionLink("Delete", "Delete", new { id = item.id, }, new { @class = "btn btn-secondary", })*@
                    </td>
                </tr>
            }

        </table>
    </div>
</div>